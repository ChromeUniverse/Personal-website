---
import "../styles/globals.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;700;900&family=Noto+Sans:ital,wght@0,200;0,400;0,700;0,900;1,200;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <script
      src="https://kit.fontawesome.com/34fb59c22e.js"
      crossorigin="anonymous"
    ></script>

    <title>{title ? `${title} â€¢ Lucca Rodrigues` : "Lucca Rodrigues"}</title>
  </head>
  <body class="bg-gradient-to-r from-zinc-900 to-zinc-900 font-heading">
    <!-- Container view -->
    <div
      class="mx-auto rounded-xl h-screen w-[80%] max-w-[800px] text-white flex flex-col"
    >
      <!-- Navbar -->
      <Navbar />

      <!-- Content -->
      <slot />

      <!-- Footer -->
      <Footer />
    </div>
  </body>
</html>
