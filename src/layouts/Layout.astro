---
import "../styles/globals.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  imageURL?: string;
}

const {
  title: TitleProp,
  description = "Lucca Rodrigues' website",
  imageURL: ImageURlProp = "/bass-cropped.png",
} = Astro.props as Props;

const title = TitleProp ? `${TitleProp} â€¢ Lucca Rodrigues` : "Lucca Rodrigues";

const url = import.meta.env.DEV
  ? Astro.url.pathname
  : import.meta.env.SITE + Astro.url.pathname.slice(1);
const imageURL = import.meta.env.DEV
  ? ImageURlProp
  : import.meta.env.SITE + ImageURlProp.slice(1);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#3b82f6" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {imageURL && <meta property="og:image" content={imageURL} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@OmniChrome2" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {imageURL && <meta property="twitter:image" content={imageURL} />}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;700;900&family=Noto+Sans:ital,wght@0,200;0,400;0,700;0,900;1,200;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <script
      src="https://kit.fontawesome.com/34fb59c22e.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-gradient-to-r from-zinc-900 to-zinc-900 font-heading">
    <!-- Container view -->
    <div
      class="mx-auto rounded-xl h-screen w-[90%] md:w-[80%] md:max-w-[800px] text-white flex flex-col"
    >
      <!-- Navbar -->
      <Navbar />

      <!-- Content -->
      <slot />

      <!-- Footer -->
      <Footer />
    </div>
  </body>
</html>
