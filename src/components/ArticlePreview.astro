---
interface Props {
  title: string;
  body: string;
  slug: string;
  imgSrc?: string;
}

const { title, body, slug, imgSrc = "" } = Astro.props as Props;
---

<a class="hover:scale-[102%] transition-all" href={`/blog/${slug}`}>
  <div
    class="bg-zinc-800 bg-opacity-50 rounded-xl px-8 py-8 font-heading flex flex-col gap-8"
  >
    <!-- Content -->
    <div class="flex flex-col gap-5">
      <h2 class="text-2xl font-bold">{title}</h2>
      <p class="text-lg">{body}</p>
    </div>

    <!-- Preview image -->
    {
      imgSrc && (
        <img class="rounded-lg" src={imgSrc} alt="Article preview image" />
      )
    }

    <!-- Read more link -->
    <!-- <a
      class="block px-4 py-2 w-auto mx-auto font-bold border-2 rounded-xl border-blue-500"
      href={`/blog/${slug}`}>Read More</a
    > -->
  </div>
</a>
