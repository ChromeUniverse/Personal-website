---
interface Props {
  title: string;
  body: string;
  slug: string;
  imgSrc?: string;
  reverse?: boolean;
}

const {
  title,
  body,
  slug,
  imgSrc = "",
  reverse = false,
} = Astro.props as Props;
---

<div
  class="flex flex-col items-center bg-zinc-800 rounded-xl px-8 pt-8 pb-6 gap-6"
>
  <div
    class={`
       bg-opacity-50 rounded-xl h-full font-heading 
      ${imgSrc && "grid grid-cols-2 gap-8"}
    `}
  >
    <!-- Text Content -->
    <div
      class={`flex flex-col gap-5 justify-center ${reverse && "order-last"}`}
    >
      <!-- Title -->
      <h2 class={`text-3xl font-bold ${!imgSrc && "text-center"}`}>
        {title}
      </h2>
      <!-- Description -->
      <p class={`text-lg ${!imgSrc && "text-center"}`}>{body}</p>
    </div>

    <!-- Preview image -->
    {
      imgSrc && (
        <img
          class={`rounded-lg w-full ${!reverse && "order-last"}`}
          src={imgSrc}
          alt="Article preview image"
        />
      )
    }
  </div>
  <!-- Read more link -->
  <a
    class="font-heading px-4 py-2 w-auto mx-auto font-bold border-2 rounded-xl border-blue-500 hover:bg-blue-500 hover:text-zinc-800 transition-all"
    href={`/blog/${slug}`}>Read More</a
  >
</div>
