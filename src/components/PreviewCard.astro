---
interface Props {
  title: string;
  body: string;
  slug: string;
  publishDate: Date;
  imgSrc?: string;
  reverse?: boolean;
}

const {
  title,
  body,
  slug,
  imgSrc = "",
  reverse = false,
  publishDate,
} = Astro.props as Props;

const date = new Date(publishDate);
const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="flex flex-col items-start rounded-xl bg-zinc-800 bg-opacity-50">
  <!-- Preview image -->
  {
    imgSrc && (
      <img
        class="aspect-video w-full rounded-t-lg object-cover"
        src={imgSrc}
        alt="Article preview image"
      />
    )
  }

  <!-- Text Content -->
  <div class="flex h-full flex-col gap-3 px-6 pb-6 pt-6">
    <!-- Title -->
    <h2 class="text-2xl font-extrabold tracking-tight">{title}</h2>
    <!-- Description -->
    <!-- <p class="text-base text-zinc-400">{formattedDate}</p> -->

    <!-- Description -->
    <p class="text-base text-zinc-400">{body}</p>

    <!-- Read more link -->
    <a
      class="mt-auto flex w-36 items-center justify-center gap-2 rounded-lg border-2 border-blue-500 px-4 py-2 font-heading font-bold transition-all hover:bg-blue-500 hover:text-zinc-800"
      href={`/blog/${slug}`}
    >
      <span>Read more</span>
      <i class="fa-solid fa-arrow-up-right-from-square"></i>
    </a>
  </div>
</div>
