  <!-- Mobile Links -->
  <div
    id="mobile-links"
    class="-z-20 absolute flex flex-col md:flex-row gap-4 items-center group bg-zinc-800 top-[90%] right-0 px-10 py-4 rounded-lg opacity-0 transition-all drop-shadow-2xl md:hidden"
  >
    <a class="nav-link" href="/me">About Me</a>
    <a class="nav-link" href="/portfolio">Portfolio</a>
    <a class="nav-link" href="/blog">Blog</a>
    <a class="nav-link" href="/contact">Contact</a>
  </div>
</nav>

<script>
  let open = false;

  const icon = document.getElementById("icon") as HTMLElement;
  const links = document.getElementById("mobile-links") as HTMLElement;

  icon.addEventListener("click", toggleOpen);

  function toggleOpen() {
    open = !open;
    if (open) {
      // change icon color
      icon.classList.remove("text-zinc-400");
      icon.classList.add("text-white");
      // show/hide links
      links.classList.remove("opacity-0");
      links.classList.add("opacity-100");
      // change links z-index
      links.classList.remove("-z-20");
      links.classList.add("z-20");
    } else {
      // change icon color
      icon.classList.add("text-zinc-400");
      icon.classList.remove("text-white");
      // show/hide links
      links.classList.add("opacity-0");
      links.classList.remove("opacity-100");
      // change links z-index
      links.classList.add("-z-20");
      links.classList.remove("z-20");
    }
  }
</script>
