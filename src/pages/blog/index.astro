    class="flex justify-center gap-y-3 gap-x-3 flex-wrap w-[100%] mx-auto pb-12"
  >
    {
      categories.map((c) => (
        <a
          href={`/blog/tag/${c.tag}`}
          class="font-bold font-heading text-normal px-3 py-1 border-blue-500 border-2 rounded-lg hover:bg-blue-500 hover:text-zinc-900 transition-all"
        >
          {c.name}
        </a>
      ))
    }
  </div>

  <!-- Article previews -->
  <PreviewList frontmatterList={frontmatterList} />
</Layout>
