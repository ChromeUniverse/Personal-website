---
import type { MarkdownInstance } from "astro";
import Layout from "../../layouts/Layout.astro";
import PortfolioPage from "../../components/PortfolioPage.astro";

export async function getStaticPaths() {
  const projects = await Astro.glob("../../content/portfolio/*.md");

  return projects.map((project) => {
    const slug = project.frontmatter.slug;
    return {
      params: { slug },
      props: { project },
    };
  });
}

const { frontmatter, Content } = Astro.props.project as MarkdownInstance<
  Record<string, any>
>;
---

<Layout title={frontmatter.title}>
  <PortfolioPage
    title={frontmatter.title}
    subtitle={frontmatter.subtitle}
    images={frontmatter.images}
    Content={Content}
    sourceLink={frontmatter.source}
    demoLink={frontmatter.demo}
    articleSlug={frontmatter.article}
    techList={frontmatter.tech}
  />
</Layout>
